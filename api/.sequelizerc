require("dotenv").config();
const { resolve } = require("path");
const { faker } = require("@faker-js/faker");

faker.setLocale("es_MX");

const baseConfigPath = "src";
const pathKeys = ["models-path", "seeders-path", "migrations-path"];

const pathsArray = pathKeys.map((pathKey) => {
  // Obtener el path del que vamos a obtener la direcci√≥n. P.ej: models,
  // seeders, migrations
  const path = pathKey.split("-")[0];
  const baseFolder = `${baseConfigPath}/db`;

  // { 'models-path': 'src/models' }
  return { [pathKey]: `${baseFolder}/${path}` };
});

const paths = Object.assign({}, ...pathsArray);

// console.log({ paths });

module.exports = {
  config: resolve(baseConfigPath, "config/db.js"),
  ...paths,
};
