require("dotenv").config();
const { resolve } = require("path");
const { faker } = require("@faker-js/faker");

faker.setLocale("es_MX");

const PROJECT_ROOT_PATH = "src";
const DB_CONFIG_BASE_PATH = `${PROJECT_ROOT_PATH}/db`;

const PATH_KEYS = ["models-path", "seeders-path", "migrations-path"];

const pathsArray = PATH_KEYS.map((pathKey) => {
  // Obtener el path del que vamos a obtener la direcci√≥n. P.ej: models,
  // seeders, migrations
  const path = pathKey.split("-")[0];

  // { 'models-path': 'src/models' }
  return { [pathKey]: `${DB_CONFIG_BASE_PATH}/${path}` };
});

const paths = Object.assign({}, ...pathsArray);

// console.log({ paths });

module.exports = {
  config: resolve(PROJECT_ROOT_PATH, "config/db.js"),
  ...paths,
};
